<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/nim1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="NIM"
        android:textColor="#9C27B0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nama1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="NAMA"
        android:textColor="#9C27B0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nilai1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="NILAI"
        android:textColor="#9C27B0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Keterangan1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nilai1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="KETERANGAN"
        android:textColor="#9C27B0"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/NIM"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/nim1"
        android:textColor="#F80E0D0D"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/NAMA"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/nama1"
        android:textColor="#FA0A0A0A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/NILAI"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/nilai1"
        android:textColor="#E91E63"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/KETERANGAN"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nilai1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/Keterangan1"
        android:textColor="#EEFF41"
        android:textSize="24dp" />
</RelativeLayout>